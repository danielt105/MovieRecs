<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ReturnOfCruGold" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cruGold</item>
        <item name="colorPrimaryDark">@color/cruDarkGold</item>
        <item name="colorAccent">@color/cruBlueish</item>
        <item name="android:background">@color/cruGold</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Outdoorsy" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryDark">@color/forest</item>
        <item name="colorAccent">@color/grass</item>
        <item name="android:background">@color/lime</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    <style name="IceIceBaby" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ice</item>
        <item name="colorPrimaryDark">@color/warmGray</item>
        <item name="colorAccent">@color/glacierBlue</item>
        <item name="android:background">@color/ice</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    <style name="BlueForest" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blueBack</item>
        <item name="colorPrimaryDark">@color/blueTitle</item>
        <item name="colorAccent">@color/forestPart</item>
        <item name="android:background">@color/blueBack</item>
        <item name="android:textColor">@color/forestPart</item>
        <item name="android:textColorHint">@color/swizzySweetGold</item>
        <item name="android:colorButtonNormal">@color/blueTitle</item>
        <item name="android:colorControlNormal">@color/swizzySweetGold</item>
        <!--<item name="app:tabTextColor">@color/fog</item>-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    
    <style name="SearchBarStyle">
        <item name="android:hint">@string/search_hint</item>
        <item name="searchSuggestionBackground">@color/transparent</item>
        <!--<item name="searchBackground">@color/transparent</item>-->

    </style>
</resources>
